    </div>
    <table border="1" style="border: black">
        <thead>
        <tr style="color: red;">
            <th>Username</th>
            <th>Email</th>
            <th>Cin</th>
            <th>Prenom</th>
            <th>Nom</th>
            <th>Telephone</th>
            <th>Num√©ro d'ordre</th>
            <th>Roles</th>
            <th>Supprimer utilisateur</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr style="color: blue">
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.id }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.numeroOrdre }}</td>
                <td>{% for role in user.roles %}
                        {{ role }},
                    {% endfor %}</td>
                <td><a style="color: green" href="{{ path('delete',{'id':user.id })}}">
                        supprimer
                    </a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
